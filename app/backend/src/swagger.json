{
  "openapi": "3.0.0",
  "info": {
    "title": "API do Projeto Trybe Futebol Clube",
    "description": "Essa API tem com objetivo manipulação de placares de jogos de futebol e vizualização da tabela do campeonato",
    "termsOfService": "http://localhost:3001/terms",
    "contact": {
      "email": "costaldes@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/",
      "description": "API test"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "sumary": "User Login",
        "description": "Rota responsável por logar usuário possibilitanto editar e finalizar jogos",
        "tags": [
          "user"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "admin@admin.com",
                    "password": "secret_admin"
                  }
                },
                "invalidUser": {
                  "value": {
                    "email": "teste@admin.com",
                    "password": "secret_admin"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "All fields must be filled"
          },
          "401": {
            "description": "Incorrect email or password"
          },
          "200": {
            "description": "token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          }
        }
      }
    },
    "/teams": {
      "get": {
        "sumary": "Rota GET teams.",
        "description": "Rota responsável por listar os times.",
        "tags": [
          "teams"
        ],
        "responses": {
          "200": {
            "description": "Lista de times",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Team"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/teams/{id}": {
      "get": {
        "sumary": "Rota GET teams.",
        "description": "Rota responsável por listar os times.",
        "tags": [
          "teams"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Nome do time pelo ID",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de times",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Team"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/matches": {
      "get": {
        "sumary": "Rota get Matches",
        "description": "Rota responsável por listar os jogos em progresso e finalizados",
        "tags": [
          "matches"
        ],
        "parameters": [
          {
            "name": "inProgress",
            "in": "query",
            "description": "Busque as partidas finalizadas ou em andamento",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de jogos",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Match"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Token": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "Team": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "teamName": {
            "type": "string"
          }
        }
      },
      "Match": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "homeTeam": {
            "type": "number"
          },
          "homeTeamGoals": {
            "type": "number"
          },
          "awayTeam": {
            "type": "number"
          },
          "awayTeamGoals": {
            "type": "number"
          },
          "inProgress": {
            "type": "boolean"
          },
          "teamHome": {
            "type": "object", 
            "properties": {
              "teamName": {
                "type": "string"
              }
            }
          },
          "teamAway": {
            "type": "object", 
            "properties": {
              "teamName": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}